

<h3>Sample Page Content Components</h3>

<p>This page contain componets for the new page</p>

<hr />

<p>Example for Bind Data</p>
<input type="text" @bind="Name" placeholder="Enter your Employee name" class="form-control" maxlength="130" />
<input type="text" @bind="Qualification" id="txtQualification" placeholder="Enter Qualification" class="form-control" maxlength="130" />
<button @onclick="save" class="btn btn-primary">Save</button>

<ul>
    @foreach (var data in namelist)
    {
        <li>@data.Name/@data.Qualification + sss</li>
    }

</ul>

@code {
    List<EmployeeList> namelist = new List<EmployeeList>();
    private string Name = string.Empty;
    private string Qualification = string.Empty;
    private void save()
    {
        if(!String.IsNullOrEmpty(Name))
        {
            namelist.Add(new EmployeeList
            {
                Name = Name,
                Qualification = Qualification
            });
        }
        Name = string.Empty;
        Qualification = string.Empty;
    }
}
