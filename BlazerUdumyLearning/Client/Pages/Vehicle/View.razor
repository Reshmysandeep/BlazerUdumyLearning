
@page "/vehicles/view/{id:int}"

@inject HttpClient _vehicleClient
@inject NavigationManager _navManager

<PageHeaderTitle PageHeaderTitleText="View vehicle"></PageHeaderTitle>

<FormComponent IsDisabled="true" vehicle="@vehicle" OnValidSubmit="@UpdateVehicle" />


@code {
    [Parameter] public int id { get; set; }
    Vehicle vehicle = new Vehicle();
    protected async override Task OnParametersSetAsync()
    {
        vehicle = await _vehicleClient.GetFromJsonAsync<Vehicle>($"{ EndPoints.VehicleEndpoint}/{id}");
    }
    async Task UpdateVehicle()
    {
        await _vehicleClient.PutAsJsonAsync($"{EndPoints.VehicleEndpoint}/{id}", vehicle);
        _navManager.NavigateTo("/vehicles/");
    }
}
