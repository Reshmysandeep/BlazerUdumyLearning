
@page "/vehicles/view/{id:int}"

@inject IHttpRepository<Vehicle> _vehicleClient

@inject NavigationManager _navManager

<PageHeaderTitle PageHeaderTitleText="View vehicle"></PageHeaderTitle>

<FormComponent IsDisabled="true" vehicle="@vehicle"  />


@code {
    [Parameter] public int id { get; set; }
    Vehicle vehicle = new Vehicle();
    protected async override Task OnParametersSetAsync()
    {
        vehicle = await _vehicleClient.GetDetails(EndPoints.VehicleEndpoint, id);
    }
    
}
