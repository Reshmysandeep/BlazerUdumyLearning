@page "/vehicles/create/"
@inject HttpClient _vehicleClient
@inject NavigationManager _navManager
    <PageHeaderTitle PageHeaderTitleText="Create New vehicle"></PageHeaderTitle>

    <FormComponent ButtonText="Save" vehicle="vehicle" OnValidSubmit="@CreateVehicle" />



    @code {

        Vehicle vehicle = new Vehicle();

        private async Task CreateVehicle()
        {
            await _vehicleClient.PostAsJsonAsync($"{EndPoints.VehicleEndpoint}", vehicle);
            _navManager.NavigateTo("/vehicles/");
        }
    }
