<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-8">
            <div class="card">
                <div class="card-body">


                    <EditForm Model="Customersdata" OnValidSubmit="@OnValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <fieldset disabled="@IsDisabled">
                            <div class="form-group">
                                <label>First Name : </label>
                                <div>
                                    <InputText @bind-Value="Customersdata.FirstName" class="form-control"></InputText>
                                    <ValidationMessage For="@(()=>Customersdata.FirstName)" />
                                </div>

                            </div>
                            <div class="form-group">
                                <label>Last Name : </label>
                                <div>
                                    <InputText @bind-Value="Customersdata.LastName" class="form-control"></InputText>
                                    <ValidationMessage For="@(()=>Customersdata.LastName)" />
                                </div>

                            </div>
                            <div class="form-group">
                                <label>Customer Tax ID : </label>
                                <div>
                                    <InputText @bind-Value="Customersdata.TaxId" class="form-control"></InputText>
                                    <ValidationMessage For="@(()=>Customersdata.TaxId)" />
                                </div>

                            </div>
                            <div class="form-group">
                                <label>Email : </label>
                                <div>
                                    <InputText @bind-Value="Customersdata.Email" class="form-control"></InputText>
                                    <ValidationMessage For="@(()=>Customersdata.Email)" />
                                </div>

                            </div>
                            <div class="form-group">
                                <label>Phone : </label>
                                <div>
                                    <InputText @bind-Value="Customersdata.ContactNumber" class="form-control"></InputText>
                                    <ValidationMessage For="@(()=>Customersdata.ContactNumber)" />
                                </div>

                            </div>
                            <div class="form-group">
                                <label>Address : </label>
                                <div>
                                    <InputTextArea @bind-Value="Customersdata.Address" class="form-control"></InputTextArea>
                                    <ValidationMessage For="@(()=>Customersdata.Address)" />
                                </div>

                            </div>
                        </fieldset>
                        @if (!IsDisabled)
                {
                    <div>
                        <button type="submit" class="btn btn-success btn-block">
                            @buttonText
                        </button>
                    </div>
                }
                        
                        <div>
                            <BackToList Target="customers" />
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter] public Customer Customersdata { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    [Parameter] public string buttonText { get; set; } = "Save";
    [Parameter] public bool IsDisabled { get; set; } = false;
}
